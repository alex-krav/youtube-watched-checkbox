{
  "scripts": {
    "test": "mocha",
    "build": "tsc --build",
    "clean": "tsc --build --clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test && npm run build"
